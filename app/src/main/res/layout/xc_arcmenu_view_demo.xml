<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xcskin="http://schemas.android.com/apk/res/com.xc.xcskin"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xc.xcskin.view.XCArcMenuView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        xcskin:position="left_bottom"
        xcskin:radius="150dp">

        <RelativeLayout
            android:id="@+id/id_button"
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:background="@drawable/menu_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_plus" />
        </RelativeLayout>
        <com.xc.xcskin.view.MenuItem

            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="qiwei"
            xcskin:text="气味"
            xcskin:image="@drawable/ic_qiwei_speaker_notes_white_24dp" />
        <com.xc.xcskin.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="qipao"
            xcskin:text="气泡"
            xcskin:image="@drawable/ic_timeline_white_24dp" />
        <com.xc.xcskin.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="qunliao"
            xcskin:text="群聊"
            xcskin:image="@drawable/ic_people_white_24dp" />

        <com.xc.xcskin.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="anquan"
            xcskin:text="安全"
            xcskin:image="@drawable/ic_security_white_24dp" />

    </com.xc.xcskin.view.XCArcMenuView>



</RelativeLayout>